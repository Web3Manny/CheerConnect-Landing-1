<script>
  // ‚îÄ‚îÄ Tier configuration ‚îÄ‚îÄ
  const TIERS = {
    coach: {
      eyebrow: 'Coach Tier ¬∑ Early Access',
      headline: 'Before you get started,<br>tell us about<br><em>your coaching.</em>',
      sub: 'CheerConnect works best for coaches who are <strong>serious about parent communication.</strong> Not perfect ‚Äî serious. Three short questions help us personalize your setup so you\'re getting real results from day one.',
      spotsText: 'Early access: <strong>Coach tier</strong> ¬∑ Try free with 3 athletes',
      spotsPrice: '$29 <small>/mo ¬∑ locked forever</small>',
      spotsFill: '6%',
      submitContext: 'After you submit, check your inbox. Manny reads every application and your checkout link arrives within a few minutes ‚Äî along with a personal note.',
      tier: 'coach'
    },
    program: {
      eyebrow: 'Program Tier ¬∑ Early Access',
      headline: 'Before you get started,<br>tell us about<br><em>your program.</em>',
      sub: 'CheerConnect works best for programs that are <strong>serious about parent communication.</strong> Not perfect ‚Äî serious. Three short questions help us personalize your onboarding so you\'re getting real results from day one.',
      spotsText: 'Early access: <strong>94 of 100 spots</strong> remaining',
      spotsPrice: '$99 <small>/mo ¬∑ locked forever</small>',
      spotsFill: '6%',
      submitContext: 'After you submit, check your inbox. Manny reads every application and your checkout link arrives within a few minutes ‚Äî along with a personal note.',
      tier: 'program'
    },
    founding: {
      eyebrow: 'Founding Member ¬∑ 10 Spots Only',
      headline: 'You\'re applying for a<br><em>Founding Member</em> spot.',
      sub: 'This is lifetime access ‚Äî every feature, every update, no monthly fees, forever. Plus 1-on-1 onboarding, done-for-you setup, and a direct line to the founder. <strong>Only 10 spots exist.</strong>',
      spotsText: 'Founding Members: <strong>10 spots total</strong>',
      spotsPrice: '$997 <small>one-time ¬∑ lifetime</small>',
      spotsFill: '0%',
      submitContext: 'After you submit, Manny will reach out personally with your checkout link, onboarding details, and next steps. Founding Members get white-glove treatment from day one.',
      tier: 'founding'
    }
  };

  // Read tier from URL
  const params = new URLSearchParams(window.location.search);
  const tierKey = params.get('tier') || 'program';
  const tier = TIERS[tierKey] || TIERS.program;

  // Apply tier to page
  document.getElementById('eyebrow').innerHTML = tier.eyebrow;
  document.getElementById('headline').innerHTML = tier.headline;
  document.getElementById('headerSub').innerHTML = tier.sub;
  document.getElementById('spotsText').innerHTML = tier.spotsText;
  document.getElementById('spotsPrice').innerHTML = tier.spotsPrice;
  document.getElementById('submitContext').textContent = tier.submitContext;
  document.title = (tierKey === 'founding' ? 'Apply ‚Äî Founding Member' : tierKey === 'coach' ? 'Apply ‚Äî Coach Tier' : 'Apply ‚Äî Program Tier') + ' ¬∑ CheerConnect';

  setTimeout(() => { document.getElementById('spotsFill').style.width = tier.spotsFill; }, 500);

  // Character counters
  ['q1','q2','q3'].forEach(id => {
    const ta = document.getElementById(id);
    const counter = document.getElementById(id+'-counter');
    ta.addEventListener('input', () => {
      const len = ta.value.length;
      counter.textContent = len + ' / 600';
      counter.classList.toggle('warn', len > 510);
    });
  });
  const q4 = document.getElementById('q4');
  const c4 = document.getElementById('q4-counter');
  q4.addEventListener('input', () => { c4.textContent = q4.value.length + ' / 800'; c4.classList.toggle('warn', q4.value.length > 680); });

  // Validation
  function validate() {
    let valid = true;
    [['name','field-name',v=>v.trim().length>0],['email','field-email',v=>/^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(v)],['gym','field-gym',v=>v.trim().length>0],['q1','field-q1',v=>v.trim().length>20],['q2','field-q2',v=>v.trim().length>20],['q3','field-q3',v=>v.trim().length>20]].forEach(([id,fid,fn]) => {
      const el = document.getElementById(id);
      const wrap = document.getElementById(fid);
      if (!fn(el.value)) { wrap.classList.add('error'); valid = false; }
      else { wrap.classList.remove('error'); }
    });
    return valid;
  }

  document.querySelectorAll('input,textarea').forEach(el => {
    el.addEventListener('input', () => { const w = el.closest('.field'); if(w) w.classList.remove('error'); });
  });

  // Submit
  document.getElementById('applyForm').addEventListener('submit', async function(e) {
    e.preventDefault();
    if (!validate()) { const f = document.querySelector('.field.error'); if(f) f.scrollIntoView({behavior:'smooth',block:'center'}); return; }
    const btn = document.getElementById('submitBtn');
    document.getElementById('spinner').style.display = 'inline-block';
    document.getElementById('btnText').textContent = 'Submitting...';
    btn.disabled = true;
    const data = {
      name: document.getElementById('name').value.trim(),
      email: document.getElementById('email').value.trim(),
      gym: document.getElementById('gym').value.trim(),
      q1: document.getElementById('q1').value.trim(),
      q2: document.getElementById('q2').value.trim(),
      q3: document.getElementById('q3').value.trim(),
      q4: document.getElementById('q4').value.trim(),
      submitted_at: new Date().toISOString(),
      tier: tier.tier
    };
    // WIRE WEBHOOK HERE:
    // await fetch('YOUR_GHL_OR_ZAPIER_WEBHOOK', { method:'POST', headers:{'Content-Type':'application/json'}, body:JSON.stringify(data) });
    await new Promise(r => setTimeout(r, 1400));
    window.location.href = 'cheerconnect_confirmation.html?name=' + encodeURIComponent(data.name.split(' ')[0]) + '&tier=' + encodeURIComponent(tier.tier);
  });
</script>
